<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="2"
    android:layout_row="4"
    tools:context=".QRDetails">


    <TextView
        android:id="@+id/textView2"
        android:layout_marginStart="20dp"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Szobaszám" />

    <EditText
        android:id="@+id/edtRoomNumber"
        android:layout_marginStart="20dp"
        android:ems="3"
        android:textSize="12sp"
        android:layout_column="1"
        android:layout_row="0"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Leltári szám" />

    <EditText
        android:id="@+id/edtInventoryId"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:layout_column="1"
        android:layout_row="1"
        android:hint="opcionális" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Tárgy típusa" />

    <Spinner
        android:id="@+id/spnItemType"
        android:layout_marginTop="10dp"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="3"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Tárgy állapota" />

    <Spinner
        android:id="@+id/spnItemCondition"
        android:layout_marginTop="10dp"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnSpan="2"
        android:spinnerMode="dialog" />

</GridLayout>